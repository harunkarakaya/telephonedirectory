@using TelefonRehberi.Entities.ViewModel
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}
<link href="~/Content/login.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    <div class="jumbotron">
        <div class="container">
            <h2>Admin Girişi</h2>
                @Html.ValidationSummary(false)
            <div class="box">
                @Html.TextBoxFor(model => model.KullanıcıAdı, new { @class = "form-control", placeholder = "Kullanıcı adınız" })

                @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                <button type="submit" class="btn btn-default full-width"><span class="glyphicon glyphicon-ok"></span></button>
            </div>
        </div>
    </div>
}

